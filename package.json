{
  "name": "vibe-coding-project",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bash scripts/smart-dev.sh",
    "dev:force": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "clean": "bash scripts/clean-cache.sh",
    "dev:clean": "npm run clean && npm run dev:force",
    "test:api": "vitest run tests/api",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "bash scripts/test-all.sh",
    "test:report": "playwright show-report test-results/html",
    "skills:remote:start": "cd skills-remote-server && npx tsx index.ts",
    "export:flow2:n8n": "node tools/export-flow2-to-n8n.mjs",
    "gate:build": "npm run typecheck && npm run lint",
    "gate:selfcheck": "tsx scripts/run-self-check.ts",
    "gate:golden": "tsx scripts/run-golden-regression.ts",
    "gate:all": "npm run gate:build && npm run gate:selfcheck && npm run gate:golden",
    "generate:bundle-imports": "tsx scripts/generate-bundle-imports.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@types/nodemailer": "^7.0.4",
    "mammoth": "^1.11.0",
    "next": "^14.0.0",
    "nodemailer": "^7.0.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.35",
    "get-port": "^6.1.2",
    "js-yaml": "^4.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  }
}
